@model UserSignInModel
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />


<div class="container col-5 mt-5 p-lg-5">
<form asp-action="SignIn" method="post" class="p-4s w-75 mx-auto shadow py-2">

        <input asp-for="@Model.ReturnUrl" type="hidden" class="form-control" />
    <div class="mb-3 px-3">
        <label>Kullanıcı Adı :</label>
        <span class="text-danger" asp-validation-for="@Model.UserName"></span>
        <input asp-for="@Model.UserName" class="form-control" />
    </div>
    <div class="mb-3 px-3">
        <label>Şifre :</label>
        <span class="text-danger" asp-validation-for="@Model.Password"></span>
        <input type="password" asp-for="@Model.Password" class="form-control " />
    </div>
        <div class=" mb-3 px-3">
            <input class="form-check-input " type="checkbox" asp-for="@Model.RememberMe">
            <label class="form-check-label" for="RememberMe">
                Beni Hatırla
            </label>
        </div>
    <div class="mb-3 px-3">
        <button type="submit" class="btn btn-primary">Giriş Yap</button>
    </div>
    <div class="text-danger mt-2" asp-validation-summary="ModelOnly"></div>
</form>
</div>